#include <iostream>
using namespace std;

int main() {
    const int SUBJECTS = 5;
    const int GRADES = 10;
    
    int journal[SUBJECTS][GRADES];
    
    cout << "Введите оценки по " << SUBJECTS << " предметам:" << endl;
    
    for (int i = 0; i < SUBJECTS; i++) {
        cout << "\nПредмет " << i + 1 << ":" << endl;
        for (int j = 0; j < GRADES; j++) {
            do {
                cout << "Оценка " << j + 1 << ": ";
                cin >> journal[i][j];
                if (journal[i][j] < 1 || journal[i][j] > 10) {
                    cout << "Ошибка! Оценка должна быть от 1 до 10." << endl;
                }
            } while (journal[i][j] < 1 || journal[i][j] > 10);
        }
    }
    
    cout << "\n=== ВВЕДЕННЫЕ ОЦЕНКИ ===" << endl;
    for (int i = 0; i < SUBJECTS; i++) {
        cout << "Предмет " << i + 1 << ": ";
        for (int j = 0; j < GRADES; j++) {
            cout << journal[i][j] << " ";
        }
        cout << endl;
    }
    
    double averages[SUBJECTS];
    
    cout << "\n=== СРЕДНИЕ БАЛЛЫ ===" << endl;
    for (int i = 0; i < SUBJECTS; i++) {
        double sum = 0;
        for (int j = 0; j < GRADES; j++) {
            sum += journal[i][j];
        }
        averages[i] = sum / GRADES;
        cout << "Предмет " << i + 1 << ": " << averages[i] << endl;
    }
    
    double best = averages[0];
    double worst = averages[0];
    int bestIndex = 0;
    int worstIndex = 0;
    
    for (int i = 1; i < SUBJECTS; i++) {
        if (averages[i] > best) {
            best = averages[i];
            bestIndex = i;
        }
        if (averages[i] < worst) {
            worst = averages[i];
            worstIndex = i;
        }
    }
    
    cout << "\n=== РЕЗУЛЬТАТЫ ===" << endl;
    cout << "Лучший средний балл: " << best 
         << " (предмет " << bestIndex + 1 << ")" << endl;
    cout << "Худший средний балл: " << worst 
         << " (предмет " << worstIndex + 1 << ")" << endl;
    
    return 0;
}
